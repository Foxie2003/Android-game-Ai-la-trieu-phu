<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PlayerInfoActivity"
    android:background="@drawable/bg_shop">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/bg_player_info" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/bg_player_info_2"
                    android:adjustViewBounds="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:paddingTop="90dp"
                    android:paddingBottom="80dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_player_info_avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="18dp"
                            android:src="@drawable/avt1"
                            android:background="@drawable/khung1" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="Tên: "
                                    android:textAllCaps="true"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                    android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                                <TextView
                                    android:id="@+id/tv_player_info_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="Foxie Nguyễn"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="Tiền mặt: "
                                    android:textAllCaps="true"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                                <TextView
                                    android:id="@+id/tv_player_info_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#1ACF14"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="100 triệu"
                                    android:textAlignment="center"
                                    android:textColor="#1ACF14"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/money"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="Kim cương: "
                                    android:textAllCaps="true"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                                <TextView
                                    android:id="@+id/tv_player_info_diamond"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#38B6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="100"
                                    android:textAlignment="center"
                                    android:textColor="#38B6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/diamond"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="Tài sản: "
                                    android:textAllCaps="true"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                                <TextView
                                    android:id="@+id/tv_player_info_tai_san"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="100"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="Số câu trả lời đúng: "
                                    android:textAllCaps="true"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                                <TextView
                                    android:id="@+id/tv_player_info_correct_question"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="55"
                                    android:textAlignment="center"
                                    android:textColor="#FFA6FF"
                                                android:autoSizeTextType="uniform"
                                    android:fontFamily="@font/anton_regular"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_player_info_change_name"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:padding="15dp"
                            android:layout_weight="40"
                            android:fontFamily="@font/anton_regular"
                            android:gravity="center"
                            android:shadowColor="#FFA6FF"
                            android:shadowDx="0.0"
                            android:shadowDy="0.0"
                            android:shadowRadius="16"
                            android:text="Đổi tên"
                            android:textColor="#FFA6FF"
                                        android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_round_button_4"/>
                        <View
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_player_info_share"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:padding="15dp"
                            android:layout_weight="40"
                            android:fontFamily="@font/anton_regular"
                            android:gravity="center"
                            android:shadowColor="#FFA6FF"
                            android:shadowDx="0.0"
                            android:shadowDy="0.0"
                            android:shadowRadius="16"
                            android:text="Chia sẻ"
                            android:textColor="#FFA6FF"
                                        android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_round_button_4"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_player_info_sign_in"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:padding="15dp"
                            android:layout_weight="40"
                            android:fontFamily="@font/anton_regular"
                            android:gravity="center"
                            android:shadowColor="#FFA6FF"
                            android:shadowDx="0.0"
                            android:shadowDy="0.0"
                            android:shadowRadius="16"
                            android:text="Đăng nhập"
                            android:textColor="#FFA6FF"
                                        android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_round_button_4"/>
                        <View
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="10"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_player_info_sign_out"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:padding="15dp"
                            android:layout_weight="40"
                            android:fontFamily="@font/anton_regular"
                            android:gravity="center"
                            android:shadowColor="#FFA6FF"
                            android:shadowDx="0.0"
                            android:shadowDy="0.0"
                            android:shadowRadius="16"
                            android:text="Đăng xuất"
                            android:textColor="#FFA6FF"
                                        android:autoSizeTextType="uniform"
                            android:background="@drawable/bg_round_button_4"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_player_info_tablayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
            <studies.foxie.ailatrieuphu.CustomViewPager
                android:id="@+id/vp_player_info_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tl_player_info_tablayout" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/ibtn_player_info_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/button_back" />
    </RelativeLayout>
</RelativeLayout>
