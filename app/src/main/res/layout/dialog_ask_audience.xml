<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_ask_audience_main"
        android:layout_width="340dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp"
            android:elevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_ask_audience"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="360dp"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="bottom">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="10"
                            android:src="@drawable/bg_ask_audience_light"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:orientation="horizontal"
                            android:layout_above="@id/layout_ask_audience_bottom"
                            android:weightSum="4">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_column1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_above="@+id/view_ask_audience_column1"
                                    android:layout_centerHorizontal="true"
                                    android:padding="5dp"
                                    android:shadowColor="#5CE1E6"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="0%"
                                    android:textColor="#5CE1E6"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/anton_regular"/>
                                <View
                                    android:id="@+id/view_ask_audience_column1"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/bg_column"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_column2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_above="@+id/view_ask_audience_column2"
                                    android:layout_centerHorizontal="true"
                                    android:padding="5dp"
                                    android:shadowColor="#5CE1E6"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="0%"
                                    android:textColor="#5CE1E6"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/anton_regular"/>
                                <View
                                    android:id="@+id/view_ask_audience_column2"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/bg_column"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_column3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_above="@+id/view_ask_audience_column3"
                                    android:layout_centerHorizontal="true"
                                    android:padding="5dp"
                                    android:shadowColor="#5CE1E6"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="0%"
                                    android:textColor="#5CE1E6"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/anton_regular"/>
                                <View
                                    android:id="@+id/view_ask_audience_column3"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/bg_column"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_column4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_above="@+id/view_ask_audience_column4"
                                    android:layout_centerHorizontal="true"
                                    android:padding="5dp"
                                    android:shadowColor="#5CE1E6"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="0%"
                                    android:textColor="#5CE1E6"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/anton_regular"/>
                                <View
                                    android:id="@+id/view_ask_audience_column4"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/bg_column"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_ask_audience_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal"
                            android:weightSum="4">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_a"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="A"
                                    android:textSize="24sp"
                                    android:textColor="#FFA6FF"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/anton_regular"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_b"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="B"
                                    android:textSize="24sp"
                                    android:textColor="#FFA6FF"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/anton_regular"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_c"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="C"
                                    android:textSize="24sp"
                                    android:textColor="#FFA6FF"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/anton_regular"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_ask_audience_d"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:shadowColor="#FFA6FF"
                                    android:shadowDx="0.0"
                                    android:shadowDy="0.0"
                                    android:shadowRadius="16"
                                    android:text="D"
                                    android:textSize="24sp"
                                    android:textColor="#FFA6FF"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"
                                    android:fontFamily="@font/anton_regular"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_ask_audience_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_ask_audience_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:shadowColor="#FFA6FF"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:text="Chạm vào vị trí bất kỳ để đóng"
        android:textColor="#FFA6FF"
        android:textSize="20sp"
        android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"/>
</RelativeLayout>