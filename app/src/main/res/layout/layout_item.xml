<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="20dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/item_car_4"
        android:background="@drawable/bg_item_holder_2"/>
    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:padding="5dp"
        android:shadowColor="#1ACF14"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:text="200 triá»‡u"
        android:textAlignment="center"
        android:textColor="#1ACF14"
        android:textSize="20sp"
        android:fontFamily="@font/anton_regular"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_item_buy"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:fontFamily="@font/anton_regular"
        android:gravity="center"
        android:layout_marginTop="-10dp"
        android:shadowColor="#FFA6FF"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:text="Mua"
        android:textColor="#FFA6FF"
        android:textSize="19sp"
        android:background="@drawable/selector_round_button"/>
</LinearLayout>