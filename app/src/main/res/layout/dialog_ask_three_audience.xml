<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_ask_three_audience_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:id="@+id/layout_ask_three_audience_main"
        android:layout_width="390dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_ask_three_audience"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:paddingBottom="90dp"
        android:paddingRight="20dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ask_three_audience_1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/icon_audience" />

            <TextView
                android:id="@+id/tv_ask_three_audience_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/anton_regular"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#FFA6FF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:textColor="#FFA6FF"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ask_three_audience_2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/icon_audience" />

            <TextView
                android:id="@+id/tv_ask_three_audience_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/anton_regular"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#FFA6FF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:textColor="#FFA6FF"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ask_three_audience_3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/icon_audience" />

            <TextView
                android:id="@+id/tv_ask_three_audience_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/anton_regular"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#FFA6FF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:textColor="#FFA6FF"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ask_three_audience_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_ask_three_audience_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:shadowColor="#FFA6FF"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:text="Chạm vào vị trí bất kỳ để đóng"
        android:textColor="#FFA6FF"
        android:textSize="20sp"
        android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"/>
</RelativeLayout>
