<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentLeaderboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="32">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:shadowColor="#C1FF72"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="TOP 2"
                android:textAlignment="center"
                android:textColor="#C1FF72"
                android:textSize="26sp"
                android:fontFamily="@font/abeezee_bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_leaderboard_avatar_top_2"
                    android:layout_margin="8dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_corner"
                    android:src="@drawable/avt3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frame_top_2" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_leaderboard_name_top_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:padding="5dp"
                android:shadowColor="#FFDE59"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="F0x1e"
                android:textAlignment="center"
                android:textColor="#FFDE59"
                android:textSize="26sp"
                android:fontFamily="@font/abeezee_bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_leaderboard_info_top_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:shadowColor="#38B6FF"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="16"
                    android:text="100"
                    android:textAlignment="center"
                    android:textColor="#38B6FF"
                    android:textSize="20sp"
                    android:fontFamily="@font/anton_regular"/>
                <ImageView
                    android:id="@+id/iv_leaderboard_image_top_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/diamond"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="36">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:shadowColor="#FFDE59"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="TOP 1"
                android:textAlignment="center"
                android:textColor="#FFDE59"
                android:textSize="26sp"
                android:fontFamily="@font/abeezee_bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_leaderboard_avatar_top_1"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_corner"
                    android:src="@drawable/avt3" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frame_top_1" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_leaderboard_name_top_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:padding="5dp"
                android:shadowColor="#FFDE59"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="F0x1e"
                android:textAlignment="center"
                android:textColor="#FFDE59"
                android:textSize="26sp"
                android:fontFamily="@font/abeezee_bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_leaderboard_info_top_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:shadowColor="#38B6FF"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="16"
                    android:text="100"
                    android:textAlignment="center"
                    android:textColor="#38B6FF"
                    android:textSize="20sp"
                    android:fontFamily="@font/anton_regular"/>
                <ImageView
                    android:id="@+id/iv_leaderboard_image_top_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/diamond"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="32">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:shadowColor="#FFDCE9"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="TOP 3"
                android:textAlignment="center"
                android:textColor="#FFDCE9"
                android:textSize="26sp"
                android:fontFamily="@font/abeezee_bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_leaderboard_avatar_top_3"
                    android:layout_margin="12dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_corner"
                    android:src="@drawable/avt3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frame_top_3" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_leaderboard_name_top_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:padding="5dp"
                android:shadowColor="#FFDE59"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="F0x1e"
                android:textAlignment="center"
                android:textColor="#FFDE59"
                android:textSize="26sp"
                android:fontFamily="@font/abeezee_bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_leaderboard_info_top_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:shadowColor="#38B6FF"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="16"
                    android:text="100"
                    android:textAlignment="center"
                    android:textColor="#38B6FF"
                    android:textSize="20sp"
                    android:fontFamily="@font/anton_regular"/>
                <ImageView
                    android:id="@+id/iv_leaderboard_image_top_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/diamond"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/horizontal_light"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>