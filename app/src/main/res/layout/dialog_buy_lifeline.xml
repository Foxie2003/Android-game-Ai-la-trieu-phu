<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_buy_lifeline_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">
    <LinearLayout
        android:id="@+id/layout_buy_lifeline_main"
        android:layout_width="390dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="-20dp"
                android:src="@drawable/icon_buy_lifeline"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anton_regular"
                android:gravity="center"
                android:padding="5dp"
                android:shadowColor="#FFA6FF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="Mua thêm một lần sử dụng trợ giúp này với giá:"
                android:textColor="#FFA6FF"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_buy_lifeline_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/anton_regular"
                android:padding="5dp"
                android:shadowColor="#179FE3"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:text="100"
                android:textAlignment="center"
                android:textColor="#179FE3"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/diamond" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_buy_lifeline_buy"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/bg_item_buy"
            android:background="@drawable/bg_item_price"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_buy_lifeline_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_buy_lifeline_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:shadowColor="#FFA6FF"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:text="Chạm vào vị trí bất kỳ để đóng"
        android:textColor="#FFA6FF"
        android:textSize="20sp"
        android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"/>
</RelativeLayout>
