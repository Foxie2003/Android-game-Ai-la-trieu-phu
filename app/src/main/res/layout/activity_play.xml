<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChallengeGameActivity"
    android:background="@drawable/bg_play">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_play_ready"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_weight="10"
            android:background="@drawable/btn_ready"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_play_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <RelativeLayout
            android:id="@+id/layout_countdown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">
            <ImageButton
                android:id="@+id/ibtn_play_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/button_back" />

            <ImageButton
                android:id="@+id/iv_play_countdown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:paddingTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_countdown" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_question_number"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_question_number"
                android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
                android:scaleType="fitCenter"
                android:text="1 / 15"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <studies.foxie.ailatrieuphu.GradientTextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
                android:paddingTop="10dp"
                android:text="123"
                android:textSize="28sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_play_question"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:padding="80dp"
            android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
            android:gravity="center"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:background="@drawable/bg_question"/>
        <LinearLayout
            android:id="@+id/layout_answers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="vertical"
            android:weightSum="100">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_answer_a"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="25"
                android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:background="@drawable/selector_answer"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_answer_b"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="25"
                android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:background="@drawable/selector_answer"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_answer_c"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="25"
                android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:background="@drawable/selector_answer"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_answer_d"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="25"
                android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
                android:autoSizeTextType="uniform"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:background="@drawable/selector_answer"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_lifelines"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="100">
            <ImageView
                android:id="@+id/iv_play_right_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:src="@drawable/right_arrow"/>
            <ImageView
                android:id="@+id/iv_play_5050"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="2dp"
                android:src="@drawable/button_5050"/>
            <ImageView
                android:id="@+id/iv_play_ask_audience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="2dp"
                android:src="@drawable/button_ask_audience"/>
            <ImageView
                android:id="@+id/iv_play_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="2dp"
                android:src="@drawable/button_call"/>
            <ImageView
                android:id="@+id/iv_play_ask_three_audience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:padding="2dp"
                android:src="@drawable/button_ask_three_audience"/>
            <ImageView
                android:id="@+id/iv_play_left_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:src="@drawable/left_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_ads"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_play_question_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingTop="60dp"
        android:paddingBottom="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_question_number"
        android:weightSum="15">
            <TextView
                android:id="@+id/tv_play_question_number_15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="80dp"
                android:paddingLeft="35dp"
                android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"
                android:text="@string/prize_money_15"
                android:textSize="24sp"
                android:textColor="#FFA6FF"
                android:gravity="center_vertical"
                android:background="@drawable/bg_question_number_item"/>
            <TextView
