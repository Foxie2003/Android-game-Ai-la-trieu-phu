<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_play_ready"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_weight="5"
            android:text="Sẵn sàng"
            android:textSize="24dp"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_selector"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_play_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/layout_countdown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round_right"
                android:text="back"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_play_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round_left"
                android:text="1/15"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_countdown"/>
            <ImageView
                android:id="@+id/img_countdown"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/countdown" />
            <studies.foxie.ailatrieuphu.GradientTextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="28sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_question"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="30">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_style_2">

                <TextView
                    android:id="@+id/tv_play_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#919191" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tv_play_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:typeface="serif"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/question_selected"
                    android:drawableLeft="@drawable/rhombus"
                    android:drawableRight="@drawable/rhombus"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_answers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="-2dp"
            android:layout_weight="34"
            android:background="@drawable/bg_style_1"
            android:weightSum="50">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="10">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#919191" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_play_answer_a"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:typeface="monospace"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_selector"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="10">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#919191" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_play_answer_b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:typeface="monospace"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_selector"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="10">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#919191" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_play_answer_c"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:typeface="monospace"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_selector"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="10">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#919191" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_play_answer_d"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:typeface="monospace"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_selector"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_lifelines"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_style_3"
            android:weightSum="4"
            android:layout_weight="10"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_5050"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:text="50:50"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/button_round_1"/>
            <ImageButton
                android:id="@+id/btn_ask_audience"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_groups_24"
                android:background="@drawable/button_round_1"/>
            <ImageButton
                android:id="@+id/btn_call"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_call_24"
                android:background="@drawable/button_round_1"/>
            <ImageButton
                android:id="@+id/btn_change_question"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_autorenew_24"
                android:background="@drawable/button_round_1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_ads"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="QUẢNG CÁO"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_play_question_number"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:padding="10dp"
        android:weightSum="15">
        <TextView
