<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="100">
    <RelativeLayout
        android:id="@+id/layout_countdown"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round_right"
            android:text="back"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round_left"
            android:text="next"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/img_countdown"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/countdown"
            />

        <studies.foxie.ailatrieuphu.GradientTextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="[30]"
            android:textSize="28sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="30">
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:id="@+id/layout_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:text="Đâu là một loại hình chợ tạm tự phát thường xuất hiện trong các khu dân cư?"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <View
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#919191"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:typeface="monospace"
                android:text="$100.000.000"
                android:textSize="20sp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:background="@drawable/question_normal"/>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="-2dp"
        android:layout_weight="30"
        android:background="@drawable/bg_style_1"
        android:weightSum="4">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#919191" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:typeface="monospace"
                android:text="$100.000.000"
                android:textSize="20sp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:background="@drawable/question_normal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <View
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/button_style_2"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="80"
                    android:background="@drawable/button_style"
                    android:textAllCaps="false"
                    android:typeface="monospace"
                    android:text="$100.000.000"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/button_style_3"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <View
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/button_style_2"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="80"
                    android:background="@drawable/button_style"
                    android:textAllCaps="false"
                    android:typeface="monospace"
                    android:text="$100.000.000"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/button_style_3"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <View
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/button_style_2"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="80"
                    android:background="@drawable/button_style"
                    android:textAllCaps="false"
                    android:typeface="monospace"
                    android:text="$100.000.000"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/button_style_3"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_lifeline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="12">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_5050"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:text="50:50"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_round_1"/>
        <ImageView
            android:id="@+id/btn_ask_audience"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_groups_24"
            android:background="@drawable/button_round_1"/>
        <ImageView
            android:id="@+id/btn_call"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_call_24"
            android:background="@drawable/button_round_1"/>
        <ImageView
            android:id="@+id/btn_change_question"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_autorenew_24"
            android:background="@drawable/button_round_1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_ads"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="8"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="QUẢNG CÁO"/>
    </LinearLayout>
</LinearLayout>