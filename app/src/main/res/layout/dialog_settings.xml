<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_settings_wrap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <LinearLayout
        android:id="@+id/layout_settings_main"
        android:layout_width="390dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_settings"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:paddingBottom="90dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_settings_music"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_music_mute" />

            <SeekBar
                android:id="@+id/sb_setting_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:progressTint="#179FE3"
                android:thumbTint="#179FE3"/>

            <TextView
                android:id="@+id/tv_settings_music_value"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-40dp"
                android:fontFamily="@font/anton_regular"
                android:padding="5dp"
                android:shadowColor="#179FE3"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:textColor="#179FE3"
                android:text="100"
                android:gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_settings_sound"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_sound_mute" />

            <SeekBar
                android:id="@+id/sb_setting_sound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:progressTint="#179FE3"
                android:thumbTint="#179FE3"/>

            <TextView
                android:id="@+id/tv_settings_sound_value"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-40dp"
                android:fontFamily="@font/anton_regular"
                android:padding="5dp"
                android:shadowColor="#179FE3"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="16"
                android:textColor="#179FE3"
                android:text="100"
                android:gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_settings_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_settings_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:shadowColor="#FFA6FF"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="16"
        android:text="Chạm vào vị trí bất kỳ để đóng"
        android:textColor="#FFA6FF"
        android:textSize="20sp"
        android:fontFamily="@font/tiltneon_regular_variablefont_xrot_yrot"/>
</RelativeLayout>
